@using Microsoft.AspNetCore.Http

@{
    var userName = ViewContext.HttpContext.Session.GetString("UserName");
    var IdUser = ViewContext.HttpContext.Session.GetString("UserId");
}
<!DOCTYPE html>
<html lang="en">

<!-- Mirrored from thevectorlab.net/flatlab/index.html by HTTrack Website Copier/3.x [XR&CO'2014], Fri, 14 Aug 2015 03:42:50 GMT -->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.html">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>

    <!-- Bootstrap core CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="~/cssadmin/bootstrap.min.css" rel="stylesheet">
    <link href="~/cssadmin/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/assetsadmin/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assetsadmin/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/cssadmin/owl.carousel.css" type="text/css">
    <link href="~/assetsadmin/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/cssadmin/gallery.css" />
    <!--right slidebar-->
    <link href="~/cssadmin/slidebars.css" rel="stylesheet">

    <!-- Custom styles for this template -->

    <link href="~/cssadmin/style.css" rel="stylesheet">
    <link href="~/cssadmin/style-responsive.css" rel="stylesheet" />


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>
            <!--logo start-->
            <a href="#" class="logo">Admin<span>lab</span></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
            </div>
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle">
                            <img alt="" src="img/avatar1_small.jpg">
                            @if (!string.IsNullOrEmpty(userName))
                            {
                                <span class="username">Xin chào, @userName</span>
                            }
                            else
                            {
                                @Url.Action("Index","Admin")
                            }
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li>
                                <form method="post" action="@Url.Action("DangXuat", "Admin")" id="logoutForm">
                                    <button type="submit" class="btn btn-link" style="padding: 0; color: inherit; text-decoration: none;">
                                        <i class="fa fa-key"></i> Log Out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                    <!-- sidebar menu start-->
                    <ul class="sidebar-menu" id="nav-accordion">
                        <li class="sub-menu">
                            <a href="@Url.Action("QuanLyTourView","Admin")">
                                <i class="fa fa-dashboard"></i>
                                <span>Quản lý thông tin tour</span>
                            </a>
                        </li>
                        <li class="sub-menu">
                            <a href="@Url.Action("QuanLyKhachSanView","Admin")">
                                <i class="fa fa-hotel"></i>
                                <span>Quản lý khách sạn</span>
                            </a>
                        </li>
                        <li class="sub-menu">
                            <a href="@Url.Action("QuanLyVeMayBayView","Admin")">
                                <i class="fa fa-plane"></i>
                                <span>Quản lý vé máy bay</span>
                            </a>
                        </li>

                        <li class="sub-menu">
                            <a href="@Url.Action("QuanLyNguoiDung","Admin")">
                                <i class="fa fa-user"></i>
                                <span>Quản lý người dùng</span>
                            </a>
                        </li>

                        <li class="sub-menu">
                            <a href="@Url.Action("QuanLyPhieuView","Admin")">
                                <i class="fa fa-book"></i>
                                <span>Quản lý phiếu đặt tour</span>
                            </a>
                        </li>

                        <li class="sub-menu">
                            <a href="@Url.Action("QuanLyHoaDonView","Admin")">
                                <i class="fa fa-cogs"></i>
                                <span>Quản lý hóa đơn</span>
                            </a>
                        </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("HoTroView","Admin")">
                            <i class="fa fa-cogs"></i>
                            <span>Hỗ trợ người dùng</span>
                        </a>
                    </li>
                    </ul>
                    <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        @RenderBody();
        <!-- Right Slidebar end -->
        <!--footer start-->
    </section>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/jsadmin/jquery.js"></script>
    <script src="~/jsadmin/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/jsadmin/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/jsadmin/jquery.scrollTo.min.js"></script>
    <script src="~/jsadmin/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/jsadmin/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/assetsadmin/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/jsadmin/owl.carousel.js"></script>
    <script src="~/jsadmin/jquery.customSelect.min.js"></script>
    <script src="~/jsadmin/respond.min.js"></script>
    <script src="~/assetsadmin/fancybox/source/jquery.fancybox.js"></script>

    <!--right slidebar-->
    <script src="~/jsadmin/slidebars.min.js"></script>

    <!--common script for all pages-->
    <script src="~/jsadmin/common-scripts.js"></script>
    <script src="~/jsadmin/modernizr.custom.js"></script>
    <script src="~/jsadmin/toucheffects.js"></script>

    <!--script for this page-->
    <script src="~/jsadmin/sparkline-chart.js"></script>
    <script src="~/jsadmin/easy-pie-chart.js"></script>
    <script src="~/jsadmin/count.js"></script>


    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });


    </script>

</body>

