@model QuanLyTour.Models.VeMayBay.VeMayBayViewModel
@using QuanLyTour.Models.VeMayBay
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Thêm Vé Máy Bay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <section class="panel">
            <header class="panel-heading">Thêm Vé Máy Bay</header>
            <div class="panel-body">
                <div class="grid cs-style-3">
                    @using (Html.BeginForm("ThemVeMayBayView", "Admin", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Chuyến bay -->
                        <div class="form-group">
                            <label for="IdChuyenBay">Chuyến Bay:</label>
                            @Html.DropDownListFor(
                                     m => m.IdChuyenBay,
                                     (IEnumerable<SelectListItem>)ViewBag.ChuyenBayList,
                                     "-- Chọn chuyến bay --",
                                     new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.IdChuyenBay, "", new { @class = "text-danger" })
                        </div>

                        <!-- Giá net -->
                        <div class="form-group">
                            <label for="GiaNet">Giá Vé Gốc:</label>
                            @Html.TextBoxFor(m => m.GiaNet, new
                                {
                                    @class = "form-control",
                                    type = "number",
                                    step = "1000",
                                    placeholder = "Nhập giá vé gốc",
                                    required = "required"
                                })
                            @Html.ValidationMessageFor(m => m.GiaNet, "", new { @class = "text-danger" })
                        </div>

                        <!-- Thuế phí -->
                        <div class="form-group">
                            <label for="ThuePhi">Thuế, Phí:</label>
                            @Html.TextBoxFor(m => m.ThuePhi, new
                                {
                                    @class = "form-control",
                                    type = "number",
                                    step = "1000",
                                    placeholder = "Nhập thuế, phí",
                                    required = "required"
                                })
                            @Html.ValidationMessageFor(m => m.ThuePhi, "", new { @class = "text-danger" })
                        </div>

                        <!-- Hạng vé -->
                        <div class="form-group">
                            <label for="HangVe">Hạng Vé:</label>
                            @Html.DropDownListFor(m => m.HangVe, new List<SelectListItem> {
                        new SelectListItem { Text="Economy", Value="Eco" },
                        new SelectListItem { Text="Business", Value="Business" },
                        new SelectListItem { Text="First Class", Value="First Class" }
                        },
                                     "-- Chọn hạng vé --",
                                     new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.HangVe, "", new { @class = "text-danger" })
                        </div>

                        <!-- Hành lý xách tay -->
                        <div class="form-group">
                            <label for="HanhLyXachTayKg">Hành Lý Xách Tay (kg):</label>
                            @Html.TextBoxFor(m => m.HanhLyXachTayKg, new
                                {
                                    @class = "form-control",
                                    type = "number",
                                    min = "0",
                                    step = "1",
                                    placeholder = "Nhập kg hành lý xách tay"
                                })
                            @Html.ValidationMessageFor(m => m.HanhLyXachTayKg, "", new { @class = "text-danger" })
                        </div>

                        <!-- Hành lý ký gửi -->
                        <div class="form-group">
                            <label for="HanhLyKyGuiKg">Hành Lý Ký Gửi (kg):</label>
                            @Html.TextBoxFor(m => m.HanhLyKyGuiKg, new
                                {
                                    @class = "form-control",
                                    type = "number",
                                    min = "0",
                                    step = "1",
                                    placeholder = "Nhập kg hành lý ký gửi"
                                })
                            @Html.ValidationMessageFor(m => m.HanhLyKyGuiKg, "", new { @class = "text-danger" })
                        </div>

                        <!-- Số lượng vé -->
                        <div class="form-group">
                            <label for="SoLuongVe">Số Lượng Vé:</label>
                            @Html.TextBoxFor(m => m.SoLuongVe, new
                                {
                                    @class = "form-control",
                                    type = "number",
                                    min = "0",
                                    step = "1",
                                    placeholder = "Nhập số lượng vé",
                                    required = "required"
                                })
                            @Html.ValidationMessageFor(m => m.SoLuongVe, "", new { @class = "text-danger" })
                        </div>

                        <div class="modal-footer">
                            <a href="@Url.Action("QuanLyVeMayBayView", "Admin")" class="btn btn-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary">Thêm Vé</button>
                        </div>
                    }
                </div>
            </div>
        </section>
    </section>
</section>

<script>
    (function () {
      'use strict';
      window.addEventListener('load', function () {
        var forms = document.getElementsByClassName('needs-validation');
        Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
</script>
