@{
    ViewData["Title"] = "Trang qunr lý admin";
    Layout = "~/Views/Shared/_AdminLogin.cshtml";
}
<section class="innerpage-wrapper">
    <div id="login" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <div class="flex-content">
                        <div class="custom-form custom-form-fields">
                            <h3>Đăng nhập quản trị viên</h3>
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                            }
                            @using (Html.BeginForm("Index", "Admin"))
                            {
                                <form>

                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Tên đăng nhập" required name="username" />
                                        <span><i class="fa fa-user"></i></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Mật khẩu" required name="password" />
                                        <span><i class="fa fa-lock"></i></span>
                                    </div>
                                    <!-- Hiển thị thông báo lỗi nếu có -->
                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger">
                                            @TempData["ErrorMessage"]
                                        </div>
                                    }
                                    <button class="btn btn-orange btn-block">Đăng nhập</button>
                                </form>
                            }
                            </div><!-- end other-links -->
                        </div><!-- end custom-form -->
                    </div><!-- end form-content -->

                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end login add

    -->
</section><!-- end innerpage-wrapper -->