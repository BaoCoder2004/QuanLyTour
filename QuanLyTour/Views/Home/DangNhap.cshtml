@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LoginUser.cshtml";
}

<section class="innerpage-wrapper">
    <div id="login" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <div class="flex-content">
                        <div class="custom-form custom-form-fields">
                            <h3>Đăng Nhập</h3>
                            @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Tên đăng nhập" required name="username" />
                                    <span><i class="fa fa-user"></i></span>
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Mật khẩu" required name="password" />
                                    <span><i class="fa fa-lock"></i></span>
                                </div>

                                <!-- Hiển thị thông báo lỗi nếu có -->
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }

                                <button class="btn btn-orange btn-block">Đăng nhập</button>
                            }
                            <div class="other-links">
                            <p class="link-line">New Here? <a href="DangKy"> Signup</a></p>
                            <a class="simple-link" href="QuenMatKhau">Forgot Password?</a>
                            </div><!-- end other-links -->
                        </div><!-- end custom-form -->

                        <div class="flex-content-img custom-form-img">
                            <img src="~/hinhanh/danang1.jpg" class="img-responsive" alt="registration-img" />
                        </div><!-- end custom-form-img -->
                    </div><!-- end form-content -->

                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end login -->
</section><!-- end innerpage-wrapper -->
