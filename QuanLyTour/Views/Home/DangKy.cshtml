@{
    ViewData["Title"] = "Đăng ký";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
    Layout = "~/Views/Shared/_LoginUser.cshtml";
}

<section class="innerpage-wrapper">
    <div id="login" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <div class="flex-content">
                        <div class="custom-form custom-form-fields">
                            <h3>Đăng Ký</h3>
                            @using (Html.BeginForm("DangKy", "Home", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Tên đăng nhập" required name="username" />
                                    <span><i class="fa fa-user"></i></span>
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Mật khẩu" required name="password" />
                                    <span><i class="fa fa-lock"></i></span>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Họ tên" required name="HoTen" />
                                    <span><i class="fa fa-user"></i></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Địa Chỉ" required name="DiaChi" />
                                    <span><i class="fa fa-home"></i></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Số điện thoại" required name="SoDienThoai" />
                                    <span><i class="fa fa-phone"></i></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email" required name="Email" />
                                    <span><i class="fa fa-envelope"></i></span>
                                </div>

                                <!-- Hiển thị thông báo lỗi nếu có -->
                                @if (!string.IsNullOrEmpty(errorMessage))
                                {
                                    <div class="alert alert-danger">
                                        @errorMessage
                                    </div>
                                }

                                <!-- Hiển thị thông báo thành công nếu có -->
                                @if (!string.IsNullOrEmpty(successMessage))
                                {
                                    <div class="alert alert-success">
                                        @successMessage
                                    </div>
                                }

                                <button class="btn btn-orange btn-block">Đăng ký</button>
                            }                           
                            <div class="other-links">
                                <p class="link-line">Got Account?<a href="DangNhap"> Login</a></p>
                            </div><!-- end other-links -->
                        </div><!-- end custom-form -->

                        <div class="flex-content-img custom-form-img">
                            <img src="~/hinhanh/danang2.jpg" class="img-responsive" alt="registration-img" />
                        </div><!-- end custom-form-img -->
                    </div><!-- end form-content -->

                </div><!-- end columns -->  
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end login -->
</section><!-- end innerpage-wrapper -->
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <script type="text/javascript">
            setTimeout(function () {
                window.location.href = '/';
            }, 5000);
        </script>
    }